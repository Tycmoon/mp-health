/* pages/recommendPlans/recommendPlans.wxss */

.top {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30px 0px;
  background: #fff;
  width: 100%;
}
.tapContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  padding-bottom: 5px;
}

.item {
  width: 90%;
  height: 120px;
  margin: 5px 0px;
  position: relative;
}

image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
  position: absolute;
  left: 0px;
  top: 0px;
  z-index: 1;
}

text {
  color: #fff;
  font-size: 13px;
  z-index: 2;
  
}
.title {
  font-size: 16px;
  position: absolute;
  left: 10px;
  top: 10px;
}
.period {
  left: 10px;
  bottom: 10px;
  position: absolute;
}