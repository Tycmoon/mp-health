/* pages/detections/detections.wxss */


.item {
  padding: 20px 10px;
  background: #fff;
  margin-top: 5px;
}
.top {
  display: flex;
  justify-content: space-between;
  border-left: solid 3px #DB3936;
  padding-left: 10px;
  margin-bottom: 5px;
}
text {
  font-size: 14px;
}

.content {
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 10px 0px;
}
.button {
  background: #3FC7B1;
  margin-top: 10px;
  padding: 0px 10px;
  font-size: 15px;
}

image {
  width: 50px;
  height: 50px;
  position: fixed;
  right: 10px;
  bottom: 10px;
}

.btns {
  display: flex;
}

.delete {
  margin-top: 10px;
  padding: 0px 10px;
  font-size: 15px;
  margin-left: 10px;
}