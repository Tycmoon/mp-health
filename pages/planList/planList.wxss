/* pages/planList/planList.wxss */
.tapContainer{
  background: #fff;
}
.placeholder {
  padding: 10px;
  margin-top: 100px;
}
.top {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50px;
}
.plan_days {
  color: #454545;
  font-size: 30px;
  margin-bottom: 5px;
}
.plan_text {
  font-size: 10px;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50px;
}
.name {
  font-size: 16px;
}
.days {
  font-size: 10px;
  color: #A2A2A2;
}

.item{
  height: 120px;
  width: 100%;
  position: relative;
  margin-top: 20px;
}
image {
  width: 100%;
  height: 100%;
}
.title {
  position: absolute;
  left: 10px;
  top: 10px;
  color: #fff;
}
.tip {
  position: absolute;
  left: 10px;
  top: 40px;
  font-size: 12px;
  color: #fff;
}
.percent {
  position: absolute;
  right: 10px;
  top: 40px;
  font-size: 15px;
  color: #fff;
}

.percent_text {
  position: absolute;
  right: 10px;
  top: 60px;
  font-size: 12px;
  color: #fff;
}
progress {
  position: absolute;
  right: 10px;
  bottom: 10px;
  width: 650rpx;
}

.action {
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #F8F8F8;
  width: 100%;
}